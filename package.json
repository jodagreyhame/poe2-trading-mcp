{
  "name": "poe2scout-mcp",
  "version": "1.0.0",
  "description": "MCP (Model Context Protocol) server for accessing Path of Exile 2 character data through POE2Scout API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "check": "npm run typecheck && npm run format"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "path-of-exile",
    "poe2",
    "game-data",
    "api-client"
  ],
  "author": "POE2Scout MCP Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/node-cache": "^4.1.3",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "node-cache": "^5.1.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.0",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
